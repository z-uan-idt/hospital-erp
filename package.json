    "vue-tsc": "^2.2.10",
    "vuetify-nuxt-module": "^0.18.6"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,vue}": [
      "prettier --write"
    ]
