{
  "name": "hospital-erp",
  "version": "1.0.0",
  "description": "Modern Hospital ERP system built with Nuxt 3 and Vuetify 3",
  "private": true,
  "type": "module",
  "author": {
    "name": "Kieu Van Chuong",
    "email": "chuong.kv@idtinc.co"
  },
  "homepage": "https://github.com/idtinc/hospital-erp#readme",
  "repository": {
    "type": "git",
