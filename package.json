    "firebase": "^11.8.0",
    "nuxt": "^3.17.3",
    "pinia": "^3.0.3",
    "sass": "^1.89.0",
    "sass-loader": "^16.0.5",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1",
    "vue-sonner": "^1.3.2"
  },
  "devDependencies": {
